BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            id: left_panel
            width: 300
            cols: 1
            size_hint: None, 1
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'vertical'
                id: top_panel
                size_hint: 1, .1
            BoxLayout:
                orientation: 'vertical'
                id: right_panel
                spacing: 1
            Label:
                size_hint_y: 0.1
                id: bottom_panel